<%layout('./layouts/boilerplate')%>

    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add Campground</a>

    <% for(let i of campgrounds){ %>
         <div class="card" mb-3>
         <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=i.image%>">
            </div>
            <div class="col-md-8">
            <div class="card-body">
            <h5 class="card-title"><%=i.title%></h5>
            <p class="card-text"><%=i.description%></p>
            <p class="card-text">
                <small class="text-muted"><%=i.location%></small>
            </p>
            <a class="btn btn-primary" href="/campgrounds/<%=i._id%>">View <%=i.title%></a>
         </div>
        </div>
    </div>
</div>
    <% } %>


